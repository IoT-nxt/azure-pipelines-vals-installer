{
  "name": "vals-installer-pipeline-task",
  "scripts": {
    "postinstall": "cd task && npm install",
    "package": "rimraf *.vsix task/dist && tsc -p task && tfx extension create --output-path PackageOutput",
    "bump-version": "node version-bump.js",
    "publish": "tfx extension publish --publisher IoTnxt",
    "publish:dev": "tfx extension publish --publisher IoTnxt-dev",
    "test": "mocha --loader ts-node/esm -r ts-node/register task/tests",
    "prepare": "husky"
  },
  "dependencies": {
    "azure-devops-extension-sdk": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "eslint": "^9.4.0",
    "husky": "^9.0.11",
    "minimist": "^1.2.8",
    "mocha": "^10.4.0",
    "prettier": "^3.3.1",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.7",
    "tfx-cli": "^0.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
